        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.BrawlMobile"
        tools:targetApi="31">
        <activity
            android:name=".StartActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.clashRoyale.ClashHomeActivity"
            android:exported="true" />
        <activity
            android:name=".activity.brawlStars.FavouriteActivity"
            android:exported="false" />
        <activity
            android:name=".activity.brawlStars.PlayerActivity"
            android:exported="false" />
        <activity
            android:name=".activity.brawlStars.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".activity.brawlStars.BrawlHomeActivity"
            android:exported="true">
